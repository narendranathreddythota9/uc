        <div class="main-panel">
          {{#if error}}
              <script>
                sweetAlert({
                  title: "{{error}}",
                  text: "",
                  icon: "error",
                });
              </script>
          {{/if}}
          {{#if success}}
              <script>
                sweetAlert({
                  title: "{{success}}",
                  text: "",
                  icon: "success",
                });
              </script>
          {{/if}}
          <nav class="navbar navbar-transparent navbar-absolute">
              <div class="container-fluid">
                  <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse">
                          <span class="sr-only">Toggle navigation</span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="/user">   <p class="category" style="color:red;"><b>Help Others For Better World</b></p></a>
                  </div>
                  <div class="collapse navbar-collapse">
                      <ul class="nav navbar-nav navbar-right">
                          <li>
                              <a href="#pablo" class="dropdown-toggle" data-toggle="dropdown">
                                  <i class="material-icons">dashboard</i>
                                  <p class="hidden-lg hidden-md">Dashboard</p>
                              </a>
                          </li>
                          <li>
                              <a href="/logout">
                                  Logout<i class="material-icons">lock</i>
                                  <p class="hidden-lg hidden-md">lock</p>
                              </a>
                          </li>
                      </ul>
                      <form method="POST" action="/articles/search" class="navbar-form navbar-right" role="search">
                        <div class="form-group  is-empty">
                          <input type="text" class="form-control" name="searchValue" placeholder="Type Writer Name">
                          <span class="material-input"></span>
                      </div>
                        <div class="form-group  is-empty">
                        <div class="select">
                        <select  name="search_categories" id="search_categories">
                        <option id="search_categories" value="" disabled="disabled" selected="selected">Search By</option>
                        <option id="search_categories" value="writer">writerName</option>
                        <option id="search_categories" value="title">title</option>
                        <option id="search_categories" value="status">status</option>
                      </select>
                      </div>
                    </div>
                      <button type="submit" class="btn btn-white btn-round btn-just-icon">
                          <i class="material-icons">search</i>
                          <div class="ripple-container"></div>
                      </button>
                  </form>
                  </div>
              </div>
          </nav>
            <div class="content">
              {{#if requests}}
                <div class="container-fluid" {{# each requests }}>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header" data-background-color="blue">
                                    <h4 rel="tooltip" title="For Better Search we use Mongodb Please cross verify selected Article with blockchain. At verify Articel Section" class="title"><b>Article-Title</b><br>{{this.title}}</h4>
                                </div>
                                <div class="card-content">
                                  <div class="row">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                      <div class="card card-stats">
                                        <div class="card-header" data-background-color="red">
                                          <i class="material-icons">person_pin</i>
                                        </div>
                                        <div rel="tooltip" title="Article c Address on Blockchain" class="card-content">
                                          <div class="form-group ">
                                            <h7 class="control-label">Username</h7>
                                            <h4>{{ this.username }}</h4>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                      <div class="card card-stats">
                                        <div class="card-header" data-background-color="blue">
                                        <i class="material-icons">attach_money</i>
                                        </div>
                                        <div rel="tooltip" title="Article c Address on Blockchain" class="card-content">
                                          <div class="form-group ">
                                            <h7 class="control-label">Requested</h7>
                                          <h4>{{ this.money }}</h4>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                      <div class="card card-stats">
                                        <div class="card-header" data-background-color="orange">
                                          <i class="material-icons">attach_money</i>
                                        </div>
                                        <div rel="tooltip" title="Article c Address on Blockchain" class="card-content">
                                          <div class="form-group ">
                                            <h7 class="control-label">Interest</h7>
                                          <h4>{{ this.rate }}</h4>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                      <div class="card card-stats">
                                        <div class="card-header" data-background-color="pink">
                                          <i class="material-icons">hourglass_empty</i>
                                        </div>
                                        <div rel="tooltip" title="Status-Of-Requested-MOney" class="card-content">
                                          {{#equal  this.status "Rejected"}}
                                          <div class="form-group ">
                                          <h4>{{ this.status }}<div class="status-offline pull-right"></div></h4>
                                          </div>
                                          {{/equal}}
                                          {{#equal  this.status "Accepted"}}
                                          <div class="form-group ">
                                          <h4>{{ this.status }}<div class="status-online pull-right"></div></h4>
                                          </div>
                                          {{/equal}}
                                          {{#equal  this.status "Pending"}}
                                          <div class="form-group ">
                                          <h4>{{ this.status }}<div class="status-wait pull-right"></div></h4>
                                          </div>
                                          {{/equal}}
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                            </div>
                        </div>
                    </div {{/each}}>
                </div>
            </div>
            {{else}}
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-3">
                  <img src="./norecord.png">
                </div>
              </div>
                <div class="row">
                  <div class="col-md-4"></div>
                    <div class="col-md-4">
                      <img src="./cloud-servers.gif">
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
             {{/if}}
